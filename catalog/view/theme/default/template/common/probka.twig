{{ header }}
<main class="content">
    <div class="container">
        <div class="slider">
            <button class="button slider__controls js-slider-prev">
                <span class="icon-back"></span>
            </button>
            <div class="slider__wrapper js-stopper">
                {% for banner in banners %}
                    <div class="slider__item">
                        <div><img class="slider__image" src="{{ banner.image }}" alt=""></div>
                        <div class="slider__header">
                            <h3 class="slider__title">{{ banner.title }}</h3>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <button class="button slider__controls slider__controls_right js-slider-next">
                <span class="icon-next"></span>
            </button>
            <nav class="slider__dots">
            </nav>
        </div>
        {{ text }}
    </div>
</main>
{{ footer }}