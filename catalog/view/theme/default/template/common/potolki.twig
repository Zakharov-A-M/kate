<script type="text/javascript">
    $('#js_send_message_discount').click(function(event) {
        event.preventDefault();
        if (validateFormGetDiscount())  {
            $.ajax({
                url: 'index.php?route=account/discount/validateForm',
                type: 'POST',
                dataType: 'json',
                data: $('#js_form_get_discount').serialize(),
                success: function (data) {
                    if (!data['status']) {
                        if (data['error']) {
                            $.each(data['error'], function(index, value){
                                $('#js_form_get_discount [name=' +  index + ']').after("<p class='input__error'>" + value + "</p>");
                            });
                        }
                    } else {
                        sendMessageDiscount();
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                }
            });
        }
    });

    function sendMessageDiscount()
    {
        $.ajax({
            url: 'index.php?route=account/discount/sendMessage',
            type: 'POST',
            dataType: 'json',
            data: $('#js_form_get_discount').serialize(),
            success: function (data) {
                if (!data['status']) {
                    if (data['error']) {
                        $.each(data['error'], function(index, value){
                            $('#js_form_get_discount [name=' +  index + ']').after("<p class='input__error'>" + value + "</p>");
                        });
                    }
                } else if (data['status']) {
                    alert('sdfsdfsdfsd');
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    }

    function validateFormGetDiscount()
    {
        $('.input__error').remove();
        let flag = true;

        // Имя
        let name = $('#js_form_get_discount [name="firstname"]').val();
        if (!name) {
            $('#js_form_get_discount [name="firstname"]').after('<div class="input__error">Поле Имя должно быть заполнено</div>');
            flag = false;
        }

        // Фамилия
        let lastName = $('#js_form_get_discount [name="lastname"]').val();
        if (!lastName) {
            $('#js_form_get_discount [name="lastname"]').after('<div class="input__error">Поле Фамилия должно быть заполнено</div>');
            flag = false;
        }

        // Телефон
